<ul>
<% if @article.errors.any? %>
  <h2>The following errors prevented the article from getting created </h2>
  <% @article.errors.full_messages.each do |msg|%>
    <li> <%= msg %>  </li>
  <%end  %>
<% end%>
</ul>

<div class="row">
  <div class="col-md-12">
    <%= form_for @article, :html => {class: "form-horizontal",role: "form" } do |f| %>
      <div class="form-group">
        <div class="control-label col-sm-4 pull-left">
          <%= f.label :title  %>
        </div>
         <div class="col-md-8">
           <%= f.text_field :title, class: "form-control", placeholder:" Title of The Article",autofocus: true %>
         </div>

      </div>
      <div class="form-group">
        <div class="control-label col-sm-4 pull-left">
          <%= f.label :description  %>
        </div>
        <div class="col-md-8">
          <%= f.text_area :description,class: "form-control", placeholder:"Article Description",rows:10 %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset col-sm-10">
          <%= f.submit class: "btn btn-primary btn-lg" %>
        </div>
      </div>
      <p>

      </p>

    <% end %>
    <div class="col-xs-4 col-xs-offset-4">
      <%= link_to "Cancel request return to article list",articles_path %>
    </div>
    
  </div>
</div>



