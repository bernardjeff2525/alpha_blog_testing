<div class="panel panel-success">
  <div class="panel-heading">
    <h3 class="panel-title">Sign up</h3>
  </div>
    <div class="panel-body">
      <div class="row">
        <div class="col-md-10">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "form-horizontal") do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="form-group">
              <div class="control-label col-md-2">
                <%= f.label :username %>
              </div>
              <div class="col-md-10">
                <%= f.text_field :username, class: "form-control", placeholder: "Enter your Username" %>
              </div>
            </div>
            <div class="form-group">
              <div class="control-label col-md-2">
                <%= f.label :email %>
              </div>
              <div class="col-md-10">
                <%= f.email_field :email, class: "form-control", placeholder: "Enter your email" %>
              </div>
            </div>
            <div class="form-group">
              <div class="control-label col-md-2">
                <%= f.label :password %>

              </div>
              <div class="col-md-10">
                <%= f.password_field :password, class: "form-control", autocomplete: "new-password", placeholder: "Password"  %>
              </div>
              <span class="pull-right"><% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %></span>
            </div>

            <div class="form-group">
              <div class="control-label col-md-2">
                <%= f.label :password_confirmation %>

              </div>
              <div class="col-md-10">
                <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password",placeholder: "Confirm Password"  %>
              </div>
              <span class="pull-right"><% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %></span>
            </div>

            <div class="actions col-md-10">
              <%= f.submit "Sign up", class: "btn btn-success btn-lg" %>

            </div>
          <% end %>

        </div>
      </div>
    </div>
  </div>
</div>