<h1 class="text-center">Listing all categories</h1>
<div class="center">
  <%= will_paginate %>
  <%@categories.each do |category| %>
    <ul class="listing">
      <div class="row">
        <div class="well col-md-4 col-md-offset-4">
          <li class="article-title">
            <%= link_to "#{category.name}",category_path(category),class:"label label-primary"  %>
          </li>
          <%= link_to "Edit Category Name", edit_category_path(category) %>
          <li><small> <%= pluralize(category.articles.count,"article") %></small></li>
        </div>
      </div>
    </ul>
  <% end %>
  <%= will_paginate %>
</div>
