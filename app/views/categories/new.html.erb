<%= render 'shared/error', obj: @category %>
<h1 class="text-center">Create a new category</h1>

    <%= form_for @category, :html => {class: "form-horizontal",role: "form" } do |f| %>
      <div class="form-group">
        <div class="control-label col-sm-2 ">
          <%= f.label :name  %>
        </div>
        <div class="col-md-8">
          <%= f.text_field :name, class: "form-control",
                           placeholder:"Category Name",autofocus: true %>
        </div>
      </div>





      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-8">
          <%= f.submit class: "btn btn-primary btn-lg" %>
        </div>
      </div>


    <% end %>
    <div class="col-xs-4 col-xs-offset-6 pull-right">
      <%= link_to "Cancel request return to article list",users_path %>
    </div>

